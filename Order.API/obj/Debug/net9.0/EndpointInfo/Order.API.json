{
  "openapi": "3.0.4",
  "info": {
    "title": "Order.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Orders": {
      "post": {
        "tags": [
          "Orders"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderVM"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderVM"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderVM"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateOrderItemVM": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "count": {
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "CreateOrderVM": {
        "type": "object",
        "properties": {
          "buyerId": {
            "type": "string",
            "format": "uuid"
          },
          "orderItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateOrderItemVM"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}